package Assignment;

 //     1
 //    2 2
 //   3 3 3
 //  4 4 4 4 
  
public class pattern2 {
     private static int count;

	public static void main(String args[]) {
    	 count = 4;
 		for (int i=1; i<=4; i++) {
 		   for (int j=4; j>=i; j--) {
 			System.out.print(" ");
 		    }
 		   for (int k=1; k<=i; k++) {
 			System.out.print(i+" ");
 		    }  
 		System.out.println();
      }
	}
 }
    

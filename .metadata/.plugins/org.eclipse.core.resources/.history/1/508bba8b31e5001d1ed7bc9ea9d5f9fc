           //*  Find maximum and minimum value of an array.  *//

package Assignment;

public class Question8 {
	public int max(int array[]) {
		int max = array[0];
		for(int i=0; i<array.length; i++) {
			if (array[i]>max) {
				max = array[i];
			}
		}
		return max;
	}
	public int min(int array[]) {
		int min = array[0];
		for(int i=0; i<array.length; i++) {
			if (array[i]<min) {
				min = array[i];
			}
		}
		return min;
	}
 public static void main(String args[]) {
	int[] myArray = {23,92,56,40,85,14,80};
	MinAndMax p = new MinAndMax();
	System.out.println("Maximun value in the array is : " +p.max(myArray));
	System.out.println("Minimum value in the array is : " +p.min(myArray));
    }	
}
